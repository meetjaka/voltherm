# ============================================
# Voltherm Technologies - Environment Variables
# ============================================
# Copy this file to .env.local for local development
# Add these variables in Vercel Dashboard for production

# --------------------------------------------
# Backend API Configuration
# --------------------------------------------
# Production Backend API URL
NEXT_PUBLIC_API_URL=https://voltherm-backend-2pw5.onrender.com

# For local development, use:
# NEXT_PUBLIC_API_URL=http://localhost:8080

# --------------------------------------------
# Optional Configuration
# --------------------------------------------

# Bundle Analyzer (for development only)
# Uncomment to enable bundle analysis
# BUNDLE_ANALYZER_ENABLED=true

# --------------------------------------------
# Future Integrations (Currently Not Used)
# --------------------------------------------

# Database (when implementing backend)
# DATABASE_URL=your_database_connection_string

# Authentication (when implementing auth)
# NEXTAUTH_URL=https://your-domain.com
# NEXTAUTH_SECRET=your_secret_key

# Payment Gateway (when implementing e-commerce)
# STRIPE_PUBLIC_KEY=your_stripe_public_key
# STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Service (for contact forms)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id

# API Configuration (when implementing backend API)
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# API_SECRET_KEY=your_api_secret_key

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. Never commit .env.local or .env files to git
# 2. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 3. All other variables are server-side only
# 4. Update .gitignore to include: .env*.local
# ============================================
